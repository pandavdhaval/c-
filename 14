




/******************************************************************************
  
  
 
* * * * * * * * * * * * 
* * * * *     * * * * * 
* * * *         * * * * 
* * *             * * * 
* *                 * * 
*                     * 

*******************************************************************************/
    
    
#include <stdio.h>
int main()
{
    int n;
    
    printf("enter number :");
    scanf("%d",&n);
    
    for(int i=1; i<=n; i++)
    {
        for(int j=i; j<=n; j++)
        {
            printf("* ");
        }
        for(int k=1; k<i; k++)
        {
            printf("  ");
        }
        for(int g=1; g<i; g++)
        {
            printf("  ");
        }
        for(int h=i; h<=n; h++)
        {
            printf("* ");
        }
        printf("\n");
    }
    
    
    return 0;
}