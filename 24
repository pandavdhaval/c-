/******************************************************************************
          * 
        * * * 
      * * * * * 
    * * * * * * * 
  * * * * * * * * * 
* * * * * * * * * * * 
* * * *       * * * * 
* * * *       * * * * 
* * * *       * * * * 
* * * *       * * * * 
* * * *       * * * * 
* * * *       * * * * 

*******************************************************************************/



#include <stdio.h>
int main()
{
    int n;
    printf("enter numeber :");
    scanf("%d",&n);
    
    for(int i=1; i<=n; i++)
    {
        for(int j=i; j<n; j++)
        {
            printf("  ");
        }
        for(int k=1; k<=i; k++)
        {
            printf("* ");
        }
        for(int g=1; g<i; g++)
        {
            printf("* ");
        }
        printf("\n");
    }
   
    for(int i=1; i<=n; i++)
    {
        for(int j=1; j<=n/2+1; j++)
        {
            printf("* ");
        }
        
        for(int k=1; k<=n/2; k++)
        {
            printf("  ");
        }
        for(int g=1; g<=n/2+1; g++)
        {
            printf("* ");
        }
        printf("\n");
        
    }
    
    return 0;
}