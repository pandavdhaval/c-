


// ---------------
// *
// **
// * *
// *  *
// *   *
// *  *
// * *
// **
// *
// ---------------

#include <stdio.h>
int main()
{
    int n;
    printf("enter number :");
    scanf("%d",&n);
    
    for(int i=1; i<=n; i++)
    {
        for(int j=1; j<=i; j++)
        {
          if(j==1||i==j)
          {
            printf("* ");
          }
          else
          {
              printf("  ");
          }
        }
          printf("\n");
    }
    
    
    for(int i=n-1; i>=1; i--)
    {
        for(int j=1; j<=i; j++)
        {
          if(j==1||i==j)
          {
            printf("* ");
          }
          else
          {
              printf("  ");
          }
        }
          printf("\n");
    }
    
    
    
    return 0;
}