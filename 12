#include <stdio.h>
int main()
{
    int n;
    
    printf("enter number :");
    scanf("%d",&n);
    
    for(int i=1; i<=n/2; i++)
    {
        for(int j=1; j<=i; j++)
        {
            printf("* ");
        }
        for(int k=n-i; k>i; k--)
        {
            printf("  ");
        }
        for(int g=1; g<=i; g++)
        {
            printf("* ");
        }
      
        printf("\n");
    }
    
    
    return 0;
}