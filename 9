/******************************************************************************

          *
         * *
        *   *
       *     * 
      * * * * *

*******************************************************************************/
#include <stdio.h>
int main()
{
    int n;
    printf("enter numeber :");
    scanf("%d",&n);
    
    for(int i=1;  i<=n; i++)
    {
        for(int j=i; j<n; j++)
        {
            printf(" ");
        }
        for(int k=1;k<=i; k++)
        {
            if(k==1||i==n||k==i)
            {
                printf("* ");
            }
            else
            {
                printf("  ");
            }
        }
       
        
        printf("\n");
    }
    
    
    return 0;
}