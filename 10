   * * * 
    * * 
     * 
*******************************************************************************/
  
  
  
 #include <stdio.h>
 int main()
 {
     int n;
     printf("enter numeber :");
     scanf("%d",&n);
     
     for(int i=n; i>=1; i--)
     {
         for(int j=i; j<n; j++)
         {
             printf(" ");
         }
         for(int k=1; k<=i; k++)
         {
             printf("* ");
         }
         printf("\n");
     }
 }