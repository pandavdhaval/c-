/******************************************************************************
 A 
B B 
C   C 
D     D 
E       E 
F F F F F F 

*******************************************************************************/
#include <stdio.h>
int main()
{
    int n;
    printf("enter number :");
    scanf("%d",&n);
    
    for(int i=1; i<=n; i++)
    {
        for(int j=1; j<=i; j++)
        {
            if(j==1||i==n||j==i)
            {
            printf("%c ",64+i);
            }
            else
            {
                printf("  ");
            }
        }
        printf("\n");
    }
    
    
    return 0;
}